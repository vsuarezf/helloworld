CIT.TITLE <- "helloworld: a demo package for R coding style"
CIT.AUTHOR<- "Reinhard Simon"
CIT.YEAR <- version$year
CIT.ORG <- "International Potato Center (CIP)"
CIT.TEXT <- paste(CIT.AUTHOR, " (", CIT.YEAR, "). ", CIT.TITLE, ". , CIT.ORG", sep="")

citEntry(
    entry = "Manual",
    title = CIT.TITLE,
    author= CIT.AUTHOR,
    year = CIT.YEAR,
    textVersion = CIT.TEXT,
    organization = CIT.ORG
)
